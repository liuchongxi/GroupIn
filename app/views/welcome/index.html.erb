
<% @page_title = "Welcome" %>
<div class="WelcomeSlide">
	<div class="carousel slide" data-ride="carousel"id="featured">
		<!-- carousel indicators -->
		<ol class="carousel-indicators">
			<li data-target="#featured" data-slide-to="0" class="active"></li>
			<li data-target="#featured" data-slide-to="1"></li>
			<li data-target="#featured" data-slide-to="2"></li>
		</ol>
		<!-- carousel inner -->
		<div class="carousel-inner">
			<div class="item active">
				<img src="/assets/sfuSnow1.jpeg", alt="Food">
				<div class="carousel-caption">
					<h3>SFU</h3>
					<p>Engaging the World</p>
				</div>
			</div>
			<div class="item">
				<img src="/assets/sfuNight.jpeg", alt="Study">
				<div class="carousel-caption">
					<h3>GroupIN</h3>
					<p>Place for New Friendship</p>
				</div>
			</div>
			<div class="item">
				<img src="/assets/pool2.jpg", alt="Sport">
				<div class="carousel-caption ">
					<h3 >CMPT 276</h3>
					<p>Group 15 Project</p>
				</div>
			</div>	
		</div>
		<!-- carousel control button -->
		<a class="left carousel-control" href="#featured" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
		</a>
		<a class="right carousel-control" href="#featured" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a><!-- carousel control button end -->

	</div><!-- carousel -->
</div>

<div class="WelcomeCategory">
	<div class="content container">
		<!-- <div class="row">
			<section class="col-sm-12">
			</section>
		</div> -->
		<div class="row">
			<section class="col-xs-12 col-sm-4">
				<div class="thumbnail">
					<a href="/category/food/">
						<img src="/assets/FoodBreakfast.jpg", alt="Food">
						<div class="caption">
							<h3>Food</h3>
							<p>SFU Foodies' Hangout Place</p>
						</div>
					</a>
				</div>
			</section>

			<section class="col-xs-12 col-sm-4">
				<div class="thumbnail">
					<a href="/category/study/">
						<img src="/assets/StudyCoffee.jpg", alt="Study">
						<div class="caption">
							<h3>Study</h3>
							<p>Learning never stops</p>
						</div>
					</a>
				</div>
			</section>

			<section class="col-xs-12 col-sm-4">
				<div class="thumbnail">
					<a href="/category/sports/">
						<img src="/assets/SportBadminton.jpg", alt="Sport">
						<div class="caption">
							<h3>Sport</h3>
							<p>Find buddies to enjoy your favourite sports here</p>
						</div>
					</a>
				</div>
			</section>
		</div><!-- row 1 -->

	</div><!-- end of content container -->
</div>


