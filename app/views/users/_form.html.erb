<div class="col-sm-10">
  <div class="form-horizontal">
    <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <% @user.errors.full_messages.each do |message| %>
            <p style="text-align:left;"><%= message %></p>
          <% end %>
        </div>
      <% end %>


      <div class="form-group">
        <%= f.label :first_name, :class => "col-sm-2 control-label", :for =>"inputFName" %>
        <div class="col-sm-10">
        <%= f.text_field :first_name , :required=> 'r', :class => "form-control", :id => "inputFName"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, :class => "col-sm-2 control-label", :for =>"inputLName"  %>
        <div class="col-sm-10">
        <%= f.text_field :last_name , :required=> 'r', :class => "form-control", :id => "inputLName"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sfu_email_address, :class => "col-sm-2 control-label", :for =>"inputEmail" %>
        <div class="col-sm-10">
        <%= f.email_field :email , :required=> 'r', :class => "form-control", :id => "inputEmail"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, :class => "col-sm-2 control-label", :for =>"inputpw" %>
        <div class="col-sm-10">
        <%= f.password_field :password, :class => "form-control", :id => "inpupw"%><br>
        </div>
        <%= f.label :password_confirmation, "Password Confirmation", :class => "col-sm-2 control-label", :for =>"inputcpw" %>
         <div class="col-sm-10">
        <%= f.password_field :password_confirmation, :required=>'r', :class => "form-control", :id => "inputcpw"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :gender, :class => "col-sm-2 control-label", :for =>"inputgender" %>
        <div class="col-sm-10">
        <%= f.select :gender ,["male", "female"], :required=> 'r', :class => "form-control", :id => "inputgender"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :major, :class => "col-sm-2 control-label", :for =>"inpumajor" %>
        <div class="col-sm-10">
        <%= f.select :major,["Applied Sciences", "Arts and Social Sciences", "Business", "Communication, Art and Technology", "Education", "Environment", "Health Sciences", "Science" ] , :required=> 'r', :class => "form-control", :id => "inputmajor"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
           <%= f.submit(:class => "btn btn-primary") %>
        </div>
      </div>

    <% end %>

  </div>
</div>
<div class="col-sm-2"></div>

 