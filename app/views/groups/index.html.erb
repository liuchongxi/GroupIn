<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Activity type</th>
      <th>Location</th>
      <th>Group owner</th>
      <!-- <th>Member1</th>
      <th>Member2</th>
      <th>Member3</th>
      <th>Member4</th> -->
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.time %></td>
        <td><%= group.activity_type %></td>
        <td><%= group.location %></td>
        <td><%= group.group_owner %></td>
        <!-- <td><%= group.member1 %></td>
        <td><%= group.member2 %></td>
        <td><%= group.member3 %></td>
        <td><%= group.member4 %></td> -->
        <td><%= group.description %></td>
        <td><%= link_to 'Show', group, {:style=>'color:blue;', :class => "css_class"} %></td>
        <td><%= link_to 'Edit', edit_group_path(group), {:style=>'color:blue;', :class => "css_class"} %></td>
        <% if logged_in?%>
        <% if loggedin_user.admin? %>
        <td><%= link_to 'Destroy', group, method: :delete, :style=>'color:blue;', :class => "css_class", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

